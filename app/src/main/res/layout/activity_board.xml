                            android:tag="6" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/space_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C8E6C9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewGrid7"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
