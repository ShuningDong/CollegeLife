                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:contentDescription="ImageStart"
                            app:srcCompat="@drawable/start"/>
                        <TableRow
                            android:id="@+id/icons_s"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:tag="0" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/space_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C8E6C9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewGrid1"
                            android:layout_width="190dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="@string/register_a_class"
                            android:textAlignment="center" />

                        <TableRow
                            android:id="@+id/icons_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:tag="1" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/space_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F0F4C3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewGrid2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="@string/community_service"
                            android:textAlignment="center" />

                        <TableRow
                            android:id="@+id/icons_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:tag="2" />
                    </LinearLayout>

                </TableRow>

                <TableRow
