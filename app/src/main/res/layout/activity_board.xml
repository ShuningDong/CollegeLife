                        android:text="Grid12"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewGridGraduation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Happy Graduation"
                        android:textAlignment="center" />
                </TableRow>
            </TableLayout>



        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageHome"
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/home"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imageDog"
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/dog"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/Debt"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/GPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="@string/GPA"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SpinButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/spinboard2"
        android:contentDescription="@string/Spade"
        app:layout_constraintBottom_toTopOf="@+id/next_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>